<style>
  body {
    height: 500vh;
  }

  .hero-section {
    position: relative;
    clip-path: inset(0);
    min-height: 100vh;

    color: white;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;

    & .hero_comp {
      padding: 2em;
      display: flex;
      flex-direction: column;
      align-items: center;

      & h1 {
        font-size: clamp(2.5rem, 5vw + 3rem, 10rem);
        word-spacing: 100vw;
        letter-spacing: -0.03em;
        line-height: 1.1;
        margin-bottom: 0.5em;
      }

      & p {
        max-width: 40ch;
        margin-bottom: 2em;
      }

      & a {
        font-size: 1.15em;
        color: black;
        padding: 0.5em 3.5em;
        background-color: white;
        font-weight: 600;
        border-radius: 0.15em;
        text-transform: uppercase;

        letter-spacing: 0.05em;

        transition:
          background-color 0.5s,
          color 0.5s;

        &:hover {
          background-color: black;
          color: white;
        }
      }
    }
    .hero-img {
      position: fixed;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
    }
  }

  :root {
    --custom-spacing: 2.5em;
  }

  .what_top {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: var(--custom-spacing);

    & > img {
      height: 25em;
    }

    & .what_content {
      display: flex;
      flex-direction: column;
      gap: 1.5em;

      & img {
        width: 65px;
        height: 65px;
      }

      & p {
        max-width: 45ch;
      }
    }
  }

  .what_big-numbers-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--custom-spacing);
    margin-top: calc(1.5 * var(--custom-spacing));
  }

  .team_grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--custom-spacing);
  }

  .team_comp {
    display: grid;
    gap: 1.5em;

    & h3 {
      margin-bottom: 1.5em;
    }
  }

  .faq_comp {
    & .x-hs-medium {
      margin-bottom: 1.5em;
    }
  }

  .faq_grid {
    display: grid;
    gap: 1.5em;
  }

  .blog_comp {
    & h2 {
      margin-bottom: 1.5em;
    }

  }

  .blog_grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3.5em;
  }

  .blog_card {
    position: relative;

    & h3 {
      font-size: 28px;
      font-weight: 600;
      line-height: 1.2em;
    }

    p {
      font-size: 16px;
    }
  }
  .absolute-title {
    position: absolute;
    text-align: center;
    background-color: white;
    padding: 15px 20px;
    top: 10px;
    left: 15px;
    right: 15px;
  }

  .blog_image {
    height: 100%;
    width: 100%;
  }
   
  .sub_comp {
    display: flex;
    text-align: center;
    flex-direction: column;
    align-items: center;
    gap: 1.5em;

    & h2 {
      font-size: 55px;
    }

     & p {
      max-width: 40ch;
      font-size: 18px;
      font-weight: 500;
     }
  }

  @media screen and (max-width: 997px) {
    .team_grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .what_top {
      grid-template-columns: 1fr;
    }

    .what_big-numbers-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .how_comp {
    & .x-hs-medium {
      margin-bottom: 1.5em;
    }

    & img {
      max-height: clamp(10rem, 35vw + 6rem, 40rem);
    }
  }

  @media screen and (max-width: 570px) {
    .what_big-numbers-grid {
      grid-template-columns: 1fr;
    }

    .team_grid {
      grid-template-columns: 1fr;
    }
  }
</style>
