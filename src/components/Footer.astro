<style>
  .footer_grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);

    @media (max-width: 997px) {
      .footer_logo {
        grid-column: 1 / -1;
        margin-bottom: 2em;
      }

      .footer_links {
        margin-bottom: 2em;
      }
    }

    @media (max-width: 570px) {
      .footer_links {
        grid-column: 1 / -1;
        margin-bottom: 2em;
        border-bottom: 2px solid #c9c9c9;
        padding-bottom: 1.5em;
      }

      .footer_links:last-child {
        border-bottom: 0px;
        padding-bottom: 0px;
      }
    }
  }
  .footer_logo {
    display: flex;
    flex-direction: column;
    gap: 0.5em;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 0.05em;
  }

  .footer_logo-wrapper {
    display: flex;
    width: 190px;
    margin-bottom: 3em;
  }

  .footer_links {
    display: flex;
    flex-direction: column;
    gap: 1em;

    & li {
      margin-bottom: 0.5em;
    }

    & p {
      font-size: 16px;
      font-weight: 700;
      text-transform: uppercase;
    }

    a {
      font-size: 14px;
      font-weight: 600;
    }

    & a:hover {
      color: var(--main-red);
    }
  }

  .footer_comp {
    & .copyright-text {
      font-size: 14px;
      font-weight: 600;
      border-top: 2px solid #c9c9c9;
      margin-top: 1.5em;
      padding-top: 1.5em;
      text-align: center;
      color: rgba(0, 0, 0, 0.608);

      & a:hover {
        color: var(--main-red);
      }
    }
  }
</style>
